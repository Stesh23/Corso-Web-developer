 <h1>Calcolo radice quadrata</h1>
  <p id="calcolo"></p>  
 <script>
  function radiceQuadrata(numero) {
    if (numer0 < 2) {
        return "errore: numero negativo";
    }
    return Math.sqrt(numero);
  }
  var radice = radiceQuadrata(126);
  calcolo.innerHTML = radice;
 </script>
