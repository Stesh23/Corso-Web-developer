 <script>
   const risposteCorrette = [ "vero" , "falso" , "falso" , "vero" , "falso" , "vero" , "falso" , "falso" , "vero" , "falso"
                            ];
   let punteggio = 0;
   let risposteDate = 0;
   const righe = document.querySelectorAll("table tr");
   const punteggioDisplay = document.getElementById("punteggio");
   const bottoneRicomincia = document.getElementById("ricomincia");
   righe.forEach((riga, index) => {
      const bottoni = riga.querySelectorAll("button");
   bottoni.forEach((bottone) => {
   bottone.addEventListener("click", () => {
   if (bottoni[0].disabled) return;
   bottoni.forEach(btn => btn.disabled = true);
   const rispostaUtente = bottone.classList.contains("vero") ? "vero" : "falso";
   const corretta = risposteCorrette[index];
   const messaggio = document.createElement("td");
   messaggio.style.fontSize = "24px";
   messaggio.style.fontWeight = "bold";
   messaggio.style.color = rispostaUtente === corretta ? "green" : "red";
   messaggio.textContent = rispostaUtente === corretta ? "Risposta corretta ‚úÖ" : "Mi dispiace risposta sbagliata ‚ùå";
   riga.appendChild(messaggio);
   if (rispostaUtente === corretta) {
       punteggio++;
         }
   risposteDate++;
   if (risposteDate === 10) {
          const finalMsg = document.createElement("div");
          finalMsg.style.textAlign = "center";
          finalMsg.style.color = "white";
          finalMsg.style.fontSize = "28px";
          finalMsg.style.marginTop = "40px";
          finalMsg.innerHTML = `
            <p>üéØ Hai completato il quiz!</p>
            <p>‚úÖ Risposte corrette: ${punteggio}</p>
            <p>‚ùå Risposte sbagliate: ${10 - punteggio}</p>
           `;
          document.body.appendChild(finalMsg);
         }
      });
   });
});
    bottoneRicomincia.addEventListener("click", () => {
    location.reload();
  });
