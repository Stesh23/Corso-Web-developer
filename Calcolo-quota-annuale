      <h1>Calcolatore TFR</h1>
      <p>Calcoliamo insieme la quota annuale del Trattamento di Fine Rapporto</p>
      </div>
      <input type="number" id="stipendioannualelordo"><br>
      <button onclick="calcolaTFR()">Calcola TFR Annuale</button>
      <div id="risultato" class="risultato1"></div>
    </div>
     <script>
      function calcolaTFR() {
                             const stipendioValore = document.getElementById("stipendioannualelordo").value;
                             const quotaTFRannuale = stipendioValore / 13.5;
                             document.getElementById("risultato").innerHTML = "Il vostro TFR annuale è: €" + quotaTFRannuale.toFixed(2);
                            }
    </script>
